{
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "defaultSeverity": "warn",
  "rules": {
    "no-empty": false,
    "no-empty-interface": false,
    "no-unused-variable": true,
    "no-console": [true, "log"], // only allow warn and error
    "function-name": false,
    "object-literal-sort-keys": false,
    "variable-name": false
  }
}
